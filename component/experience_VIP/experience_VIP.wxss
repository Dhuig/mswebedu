.drawer_screen {
width: 100%;
height: 100%;
position: fixed;
top: 0;
left: 0;
z-index: 1000;
background: #000;
opacity: 0.5;
overflow: hidden;
}

/*content*/

.drawer_box {
  position:absolute;
  top:45%;
  left:50%;
  width:638rpx;
  height:829rpx;
  /* background:#fff; */
  z-index: 1001;
  border-radius: 3px;
  transform: translateY(-50%) translateX(-50%);
}

.bottom {
  position: relative;
  left: 50.1%;
  bottom: 10rpx;
  width: 583rpx;
  height: 252rpx;
  border-radius:0 0 20rpx 20rpx;
  transform: translateX(-50%);
  background-color: #fff;
}

.drawer_content {
  position: absolute;
  left: 50%;
  width: 583rpx;
  height: 152rpx;
  padding: 25rpx 40rpx 0 40rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  transform: translateX(-50%);
  box-sizing: border-box;
}


.input_base {
  position: absolute;
  left: 50%;
  display: block;
  width: 458rpx;
  height: 54rpx;
  font-size: 24rpx;
  padding: 0 10px;
  max-block-size: 10;
  margin-bottom: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  background-color: white;
  box-sizing: border-box;
  transform: translateX(-50%);
}

.input_base:nth-of-type(2) {
  bottom: 0;
  margin-bottom: 0rpx;
}

.sureQuery {
  position: absolute;
  bottom: 0;
  width: 583rpx;
  height: 100rpx;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
}

.btn {
  float: left;
  width: 204rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  text-align: center;
  color: #fff;
  background: #DDDDDD;
  border-radius: 8px;
}

.btnSure {
  float: right;
  width: 204rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color: #fff;
  background-color: #FF9200;
  text-align: center;
  border-radius: 8px;
}




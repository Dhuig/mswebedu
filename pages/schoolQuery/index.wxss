/**index.wxss**/


.userInfo{ padding: 100rpx 0 70rpx 0; text-align:center; }
.userInfo .userHead{ display: inline-block; width:120rpx; height: 120rpx; margin-bottom: 10rpx; border-radius: 50%; background:url(https://gk2.mingshiedu.com/html/images/icon-header.png) no-repeat; background-size: cover; }
.ui-form-layout{ width: 100%; padding: 0rpx 40rpx; box-sizing: border-box; }
.ui-form-layout .radio{ margin-right: 100rpx; }
.ui-form-layout .radio radio{ position: relative; top:-2rpx; margin-right: 4rpx; }
.ui-form-layout .ui-form-control{margin-bottom:40rpx}
.ui-form-layout .ui-btn-block{ box-shadow: 0 0 10rpx rgba(25,173,25,1); }

/** 弹窗 **/
.ui-pop-Phone .ui-pop-Phones{ position:absolute; left: 0; top: 0; width: 100%;height: 100%;background-color:#000;opacity: .6; bottom: 0; z-index: 88; }
.ui-pop-Phone{ display: none; position:fixed; left: 0; top: 0; width: 100%;bottom: 0; z-index: 88; }
.ui-pop-Phone[data-show="true"]{ display: block; }
.ui-pop-Phone .ui-pop-center{ position: absolute; left: 50%; top: 50%; z-index: 399; width: 80%; transform: translate3d(-50%,-50%,0); -webkit-transform: translate3d(-50%,-50%,0); border-radius: 8rpx;  background: #fff; } 
.ui-pop-Phone .ui-pop-title{ line-height: 110rpx; text-align: center; font-size: 32rpx; color: #fff; background: #19ad19; }
.ui-pop-Phone .ui-pop-text{ padding:40rpx 0; line-height: 1.6; font-size: 32rpx; }
.ui-pop-Phone .ui-pop-footer{ border-top: 2rpx solid #eee; }
.ui-pop-Phone .ui-pop-btn{ display: block; box-sizing:border-box; line-height: 100rpx; text-align: center; font-size: 32rpx; background:none; }
.ui-pop-Phone .ui-pop-footer .ui-pop-btn{ float: left; width:50%; border-right: 2rpx solid #eee; color: #000; }
.ui-pop-Phone .ui-pop-footer .ui-pop-btn:last-child{ border-right:none; color: #19ad19;  }
.ui-pop-Phone .ui-pop-mask{position: absolute; left: 0; top: 0; width: 100%; bottom: 0;  background: rgba(0,0,0,0.5);}
.ui-pop-Phone .ui-pop-content{ padding:40rpx 0;  }
.ui-pop-Phone .other-btn{ display: none; }
.ui-pop-Phone .ui-btn-group[data-status="0"] .ui-btn-block{ display: none; }
.ui-pop-Phone .ui-btn-group[data-status="0"] .other-btn{ display: block; float: none; width: 100%; }
.ui-pop-Phone .ui-pop-btngroup{ padding:10rpx 40rpx; border-top: 2rpx solid #ddd; }
.ui-pop-Phone .ui-pop-btngroup .btn{ display: block; height: 72rpx; line-height: 72rpx; text-align:center; font-size: 40rpx; color: #fff; background: #19ad19;}

.ui-swiper { margin-top: 20px;}
/* 容器 */
.ui-path-layout-index{  width: 100%; overflow: auto; }
/* position: absolute; left: 0; top: 0; bottom: 102rpx; */
.ui-path-layout-index.bottom{ bottom: 0; }
.ui-path-layout-index[data-hidden="true"]{ overflow: hidden; }
/** 表单布局 **/
.ui-form-layout-index {padding:0 10px 40px 10px;}
.ui-form-layout-index .ui-form-control{ margin-bottom: 30rpx; }
/* ui-form-layout-index .ui-form-control .like{ } */
.ui-form-layout-index .ui-form-label{ margin-bottom: 14rpx; }
.ui-form-layout-index .ui-form-input{ width:100%; height:86rpx; padding-left: 20rpx; border:2rpx solid #ddd; box-sizing:border-box; line-height: 86rpx; font-size: 32rpx;  border-radius: 8rpx;  }
.ui-form-layou-indext .ui-form-tip{ padding-top:12rpx; font-size: 24rpx; color: #999; }
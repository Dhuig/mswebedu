.school-item{ padding-bottom:100rpx;   }
.school-item .title{ position: relative; padding:40rpx 0; font-size: 32rpx;background:#f3f3f3;  }
.school-item .title .icon{ display: inline-block;position: relative; top: -8rpx; width: 50rpx; height: 50rpx; margin-right: 10rpx; vertical-align: middle; background-size:contain; }
.school-item .title .link-btn{ position: absolute; right: 40rpx; top: 50%; margin-top: -36rpx; padding:20rpx; background:#19ad19; color: #fff;  }
.school-item[data-vip="0"] .title .link-btn{margin-top: -28rpx; padding:14rpx; font-size: 28rpx; }

.school-item .title .vip-btn{ display: none; position: absolute; right: 250rpx; top: 50%; margin-top: -28rpx; padding:14rpx; background:#19ad19; color: #fff; font-size: 28rpx;  }
.school-item[data-vip="0"] .title .vip-btn{ display:block; }

.ui-table-layout .td:nth-child(2){ width: 80rpx; }
.ui-table-layout .td:nth-child(3){ width: 130rpx; }
.ui-table-layout .td:nth-child(4){ width:250rpx; }
.ui-table-layout .td:nth-child(5){ width:120rpx; }



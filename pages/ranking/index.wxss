/**index.wxss**/

.school-item{ padding-bottom:100rpx;   }
.school-item .title{ position: relative; padding:40rpx 0; font-size: 32rpx;background:#f3f3f3;  }
.school-item .title .icon{ display: inline-block;position: relative; top: -8rpx; width: 50rpx; height: 50rpx; margin-right: 10rpx; vertical-align: middle; background-size:contain; }
.school-item .title .link-btn{ position: absolute; right: 40rpx; top: 50%; margin-top: -36rpx; padding:20rpx; background:#19ad19; color: #fff;  }

.ui-table-layout .subtitle{ padding-top:20rpx; font-weight: 600; }
.ui-table-layout .ui-table-tr{ border-bottom: 2rpx solid #ddd; }
.ui-table-layout .ui-table-tr:last-child{ border-bottom: none; }
.ui-table-layout .ui-table-tr .td{ border-bottom: none; }
.ui-table-layout .td:nth-child(1){ width: 270rpx; text-align: left;  }
.ui-table-layout .td:nth-child(2){ width: 200rpx; }
.ui-table-layout .td:nth-child(3){ width:100rpx; }
.ui-table-layout .td:nth-child(4){ width:100rpx; white-space: nowrap; }


.ui-tab-layout .ui-tab-head{  border-bottom: 2rpx solid #ddd; }
.ui-tab-layout .ui-tab-head .ui-tab-title{ padding: 30rpx 0; box-sizing: border-box; }
.ui-tab-layout .ui-tab-head .ui-tab-title:nth-child(1){ border-right:2rpx solid #ddd; }
.ui-tab-layout .ui-tab-head .ui-tab-title:before{ left: 25%; width: 50%;  }



.ui-table-layout .ui-table-tr[data-vip='0']{pointer-events:none;}
/* .ui-table-layout .ui-table-tr[data-vip='0'] .td{ color: #f00; } */
.ui-table-layout .ui-table-tr[data-vip='0'] .td .icon-tag{ display: none; }

.ui-table-layout .ui-table-tr .td[data-state='0']:before{ content: ""; display: inline-block; position: relative; top: -4rpx; width: 30rpx; height: 30rpx; vertical-align: middle; background:url(https://gaokaozhiyuan.oss-cn-shenzhen.aliyuncs.com/icon/arrow2.png) no-repeat; background-size:contain;}
.ui-table-layout .ui-table-tr .td[data-state='1']:before{ content: ""; display: inline-block; position: relative; top: -4rpx; width: 30rpx; height: 30rpx; vertical-align: middle; background:url(https://gaokaozhiyuan.oss-cn-shenzhen.aliyuncs.com/icon/arrow.png) no-repeat; background-size:contain;}

.ui-table-layout .ui-table-tr[data-vip='0'] .td[data-state]:before{ display: none; }


.ui-table-layout .ui-table-head .td{ padding-bottom: 10rpx; min-height: 0; text-align: center; color: #999; }